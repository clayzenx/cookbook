{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ],
    "paths": {
      "$lib": [
        "src/lib"
      ],
      "$lib/*": [
        "src/lib/*"
      ],
      "$components": [
        "src/lib/components"
      ],
      "$components/*": [
        "src/lib/components/*"
      ],
      "$utils": [
        "src/lib/utils"
      ],
      "$utils/*": [
        "src/lib/utils/*"
      ],
      "$assets": [
        "src/lib/assets"
      ],
      "$assets/*": [
        "src/lib/assets/*"
      ]
    }
  }
}
